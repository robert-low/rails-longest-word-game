<div>
  <h1>New Game</h1>
  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>

  <form action="/score" method="post" data-turb="false">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag :letters, @letters %>
     <div>
      <input type="text" name="word" id="">
      <input type="submit" value="Play!" class="">
     </div>
  </form>
</div>
